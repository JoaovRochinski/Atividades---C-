#include <iostream>
using namespace std;
int main()
{
    int num;
    int n;
    int cont = 0;
    int maior;
    int menor;
    
    cout << "Digite N: ";
    cin>> n;
    
    while(cont < n){
        
        cout << "Digite um numero: ";
        cin >> num;
        
        if(num>maior){maior = num;}
        if(num<menor){menor = num;}
        
        cont++;
    }
    cout << "\nO maior é: " << maior << "\nO menor é: " << menor;
    return 0;
}
